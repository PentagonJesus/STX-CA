<Defs>
	
	<!-- Private Uniform -->
	
	<ThingDef ParentName="ApparelMakeableBase">
		<defName>Apparel_PrivateUniform</defName>
		<label>Private Uniform</label>
		<description>Worn by privates or low ranking soldier.</description>
		<techLevel>Industrial</techLevel>
		<tradeability>Sellable</tradeability>
		<generateCommonality>0</generateCommonality>
		<generateAllowChance>0</generateAllowChance>
		<graphicData>
			<texPath>Things/Apparel/PrivateUniform/UniformPrivate_UI</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<recipeMaker>
			<unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
			<researchPrerequisite>ComplexClothing</researchPrerequisite>
			<skillRequirements>
				<Crafting>3</Crafting>
			</skillRequirements>
			<recipeUsers Inherit="False">
				<li>ElectricTailoringBench</li>
				<li>HandTailoringBench</li>
			</recipeUsers>
		</recipeMaker>
		<apparel>
			<wornGraphicPath>Things/Apparel/PrivateUniform/UniformPrivate</wornGraphicPath>
			<bodyPartGroups>
				<li>Neck</li>
				<li>Torso</li>
				<li>Shoulders</li>
				<li>Waist</li>
				<li>Arms</li>
				<li>Legs</li>
			</bodyPartGroups>
			<layers>
				<li>OnSkin</li>
			</layers>
		</apparel>
		<thingCategories Inherit="False">
			<li>Apparel</li>
		</thingCategories>
		<statBases>
			<WorkToMake>200</WorkToMake>
			<MaxHitPoints>160</MaxHitPoints>
			<Mass>1</Mass>
			<Flammability>1</Flammability>
			<ArmorRating_Sharp>0.07</ArmorRating_Sharp>
			<ArmorRating_Heat>0.18</ArmorRating_Heat>
			<Insulation_Cold>25</Insulation_Cold>
			<Insulation_Heat>15</Insulation_Heat>
			<EquipDelay>1.5</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-0.1</SlaveSuppressionOffset>
			<PainShockThreshold>0.1</PainShockThreshold>
			<MentalBreakThreshold>-0.05</MentalBreakThreshold>
		</equippedStatOffsets>
		<costList>
			<Cloth>60</Cloth>
			<Steel>15</Steel>
		</costList>
	</ThingDef>

