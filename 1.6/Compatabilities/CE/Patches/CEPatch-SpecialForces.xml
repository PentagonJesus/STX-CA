			</li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="SF_UnerforschtCommandoArmor"]/statBases/ArmorRating_Sharp</xpath>
				<value>
					<ArmorRating_Sharp>20</ArmorRating_Sharp>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="SF_UnerforschtCommandoArmor"]/statBases/ArmorRating_Blunt</xpath>
				<value>
					<ArmorRating_Blunt>45</ArmorRating_Blunt>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="SF_UnerforschtCommandoArmor"]/equippedStatOffsets</xpath>
				<value>
					<CarryWeight>80</CarryWeight>
					<ReloadSpeed>0.2</ReloadSpeed>
					<CarryBulk>20</CarryBulk>
					<ShootingAccuracyPawn>0.1</ShootingAccuracyPawn>
					<ToxicEnvironmentResistance>0.50</ToxicEnvironmentResistance>
				</value>
			</li>
			<!--Helmet-->
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="SF_UnerforschtCommandoHelmet"]/statBases</xpath>
				<value>
					<Bulk>5</Bulk>
					<WornBulk>1</WornBulk>
					<NightVisionEfficiency_Apparel>0.6</NightVisionEfficiency_Apparel>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="SF_UnerforschtCommandoHelmet"]/statBases/MaxHitPoints</xpath>
				<value>
					<MaxHitPoints>240</MaxHitPoints>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="SF_UnerforschtCommandoHelmet"]/statBases/Mass</xpath>
				<value>
					<Mass>4.8</Mass>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="SF_UnerforschtCommandoHelmet"]/statBases/Flammability</xpath>
				<value>
					<Flammability>0</Flammability>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="SF_UnerforschtCommandoHelmet"]/statBases/ArmorRating_Sharp</xpath>
				<value>
					<ArmorRating_Sharp>16</ArmorRating_Sharp>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="SF_UnerforschtCommandoHelmet"]/statBases/ArmorRating_Blunt</xpath>
				<value>
					<ArmorRating_Blunt>36</ArmorRating_Blunt>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="SF_UnerforschtCommandoHelmet"]/equippedStatOffsets</xpath>
				<value>
					<SmokeSensitivity>-1</SmokeSensitivity>
				</value>
			</li>
		</operations>
	</Operation>
</Patch>