<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Factions Expanded - Pirates</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<!-- ========== Remove Vanilla Carry Capacity ========== -->
				<li Class="PatchOperationRemove">
					<xpath>/Defs/VFEPirates.WarcasketDef[defName="SF_CrusaderDivision"]/equippedStatOffsets/VEF_MassCarryCapacity</xpath>
				</li>
				<!-- ========== Crusader Division Warcasket ========== -->
				<li Class="PatchOperationAdd">
					<xpath>/Defs/VFEPirates.WarcasketDef[defName="SF_CrusaderDivision"]/statBases</xpath>
					<value>
						<Bulk>250</Bulk>
						<WornBulk>25</WornBulk>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/VFEPirates.WarcasketDef[defName="SF_CrusaderDivision"]/statBases/ArmorRating_Sharp</xpath>
					<value>
						<ArmorRating_Sharp>46</ArmorRating_Sharp>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/VFEPirates.WarcasketDef[defName="SF_CrusaderDivision"]/statBases/ArmorRating_Blunt</xpath>
					<value>
						<ArmorRating_Blunt>132</ArmorRating_Blunt>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/VFEPirates.WarcasketDef[defName="SF_CrusaderDivision"]/equippedStatOffsets</xpath>
					<value>
						<CarryWeight>250</CarryWeight>
						<CarryBulk>200</CarryBulk>
						<Suppressability>-100</Suppressability>
					</value>
				</li>
				<!-- ========== Crusader Division Warcasket - Shoulders ========== -->
				<li Class="PatchOperationAdd">
					<xpath>/Defs/VFEPirates.WarcasketDef[defName="SF_CrusaderDivisionShoulders"]/statBases</xpath>
					<value>
						<Bulk>15</Bulk>
						<WornBulk>5</WornBulk>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/VFEPirates.WarcasketDef[defName="SF_CrusaderDivisionShoulders"]/statBases/ArmorRating_Sharp</xpath>
					<value>
						<ArmorRating_Sharp>46</ArmorRating_Sharp>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/VFEPirates.WarcasketDef[defName="SF_CrusaderDivisionShoulders"]/statBases/ArmorRating_Blunt</xpath>
					<value>
						<ArmorRating_Blunt>132</ArmorRating_Blunt>
					</value>
				</li>
				<!-- === Crusader Division Warcasket Helmet === -->
				<li Class="PatchOperationAdd">
					<xpath>/Defs/VFEPirates.WarcasketDef[defName="SF_CrusaderDivisionHelmet"]/statBases</xpath>
					<value>
						<Bulk>15</Bulk>
						<WornBulk>8</WornBulk>
						<NightVisionEfficiency_Apparel>0.6</NightVisionEfficiency_Apparel>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/VFEPirates.WarcasketDef[defName="SF_CrusaderDivisionHelmet"]/equippedStatOffsets</xpath>
					<value>
						<SmokeSensitivity>-1</SmokeSensitivity>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/VFEPirates.WarcasketDef[defName="SF_CrusaderDivisionHelmet"]/statBases/ArmorRating_Sharp</xpath>
					<value>
						<ArmorRating_Sharp>46</ArmorRating_Sharp>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/VFEPirates.WarcasketDef[defName="SF_CrusaderDivisionHelmet"]/statBases/ArmorRating_Blunt</xpath>
					<value>
						<ArmorRating_Blunt>132</ArmorRating_Blunt>
					</value>
				</li>
				<li Class="CombatExtended.PatchOperationMakeGunCECompatible">
					<defName>WarcasketGun_Naphtha</defName>
					<statBases>
						<SightsEfficiency>1.1</SightsEfficiency>
						<ShotSpread>0.08</ShotSpread>
						<SwayFactor>1.68</SwayFactor>
						<Bulk>36.00</Bulk>
						<RangedWeapon_Cooldown>1.56</RangedWeapon_Cooldown>
					</statBases>
					<Properties>
						<recoilAmount>0.77</recoilAmount>
						<verbClass>CombatExtended.Verb_ShootCE</verbClass>
						<hasStandardCommand>true</hasStandardCommand>
						<defaultProjectile>Bullet_HeavyThermalBolt</defaultProjectile>
						<warmupTime>5</warmupTime>
						<range>70</range>
						<burstShotCount>50</burstShotCount>
						<ticksBetweenBurstShots>4</ticksBetweenBurstShots>
						<soundCast>ChargeLance_Fire</soundCast>
						<soundCastTail>GunTail_Heavy</soundCastTail>
						<muzzleFlashScale>9</muzzleFlashScale>
						<targetParams>
							<canTargetLocations>true</canTargetLocations>
						</targetParams>
						<recoilPattern>Mounted</recoilPattern>
					</Properties>
					<AmmoUser>
						<magazineSize>500</magazineSize>
						<reloadTime>8</reloadTime>
						<ammoSet>AmmoSet_HeavyThermalBolts</ammoSet>
					</AmmoUser>
					<FireModes>
						<aimedBurstShotCount>25</aimedBurstShotCount>
						<aiAimMode>Snapshot</aiAimMode>
					</FireModes>
					<weaponTags>
						<li>CE_MachineGun</li>
						<li>CE_AI_Suppressive</li>
						<li>AdvancedGun</li>
					</weaponTags>
				</li>
			</operations>
		</match>
	</Operation>

	<Operation Class="PatchOperationSequence">
		<operations>
			<!--Unerforscht Commando -->
			<!--Armor-->
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="SF_UnerforschtCommandoArmor"]/statBases</xpath>
				<value>
					<Bulk>100</Bulk>
					<WornBulk>15</WornBulk>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="SF_UnerforschtCommandoArmor"]/statBases/MaxHitPoints</xpath>
				<value>
					<MaxHitPoints>500</MaxHitPoints>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="SF_UnerforschtCommandoArmor"]/statBases/Mass</xpath>
