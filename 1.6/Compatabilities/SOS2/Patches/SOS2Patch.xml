						<value>
							<li>EVA</li>
						</value>
					</match>
				</li>
				<!-- === Crusader Division Warcasket Helmet === -->
				<li Class="PatchOperationConditional">
					<xpath>/Defs/VFEPirates.WarcasketDef[defName="SF_CrusaderDivisionHelmet"]/apparel/tags</xpath>
