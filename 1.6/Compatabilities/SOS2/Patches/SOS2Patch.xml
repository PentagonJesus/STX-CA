<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Factions Expanded - Pirates</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<!-- ========== Crusader Division Warcasket ========== -->
				<li Class="PatchOperationConditional">
					<xpath>/Defs/VFEPirates.WarcasketDef[defName="SF_CrusaderDivision"]/apparel/tags</xpath>
					<nomatch Class="PatchOperationAdd">
						<xpath>/Defs/VFEPirates.WarcasketDef[defName="SF_CrusaderDivision"]/apparel</xpath>
						<value>
							<tags>
								<li>EVA</li>
							</tags>
						</value>
					</nomatch>
					<match Class="PatchOperationInsert">
						<xpath>/Defs/VFEPirates.WarcasketDef[defName="SF_CrusaderDivision"]/apparel/tags/li</xpath>
						<value>
							<li>EVA</li>
						</value>
					</match>
				</li>
				<!-- ========== Crusader Division Warcasket - Shoulders ========== -->
				<li Class="PatchOperationConditional">
