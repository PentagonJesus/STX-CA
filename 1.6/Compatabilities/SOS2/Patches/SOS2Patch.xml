						<value>
							<li>EVA</li>
						</value>
					</match>
				</li>
			</operations>
		</match>
	</Operation>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Expanded Framework</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<!-- === Unerforscht commando helmet === -->
				<li Class="PatchOperationConditional">
					<xpath>/Defs/ThingDef[defName="SF_UnerforschtCommandoHelmet"]/apparel/tags</xpath>
					<nomatch Class="PatchOperationAdd">
						<xpath>/Defs/ThingDef[defName="SF_UnerforschtCommandoHelmet"]/apparel</xpath>
						<value>
							<tags>
								<li>EVA</li>
