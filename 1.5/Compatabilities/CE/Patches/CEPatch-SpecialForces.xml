<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Factions Expanded - Pirates</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<!-- ========== Remove Vanilla Carry Capacity ========== -->
				<li Class="PatchOperationRemove">
					<xpath>/Defs/VFEPirates.WarcasketDef[defName="SF_CrusaderDivision"]/equippedStatOffsets/VEF_MassCarryCapacity</xpath>
				</li>
				<!-- ========== Crusader Division Warcasket ========== -->
				<li Class="PatchOperationAdd">
					<xpath>/Defs/VFEPirates.WarcasketDef[defName="SF_CrusaderDivision"]/statBases</xpath>
					<value>
						<Bulk>250</Bulk>
						<WornBulk>25</WornBulk>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/VFEPirates.WarcasketDef[defName="SF_CrusaderDivision"]/statBases/ArmorRating_Sharp</xpath>
					<value>
						<ArmorRating_Sharp>46</ArmorRating_Sharp>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/VFEPirates.WarcasketDef[defName="SF_CrusaderDivision"]/statBases/ArmorRating_Blunt</xpath>
					<value>
						<ArmorRating_Blunt>132</ArmorRating_Blunt>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/VFEPirates.WarcasketDef[defName="SF_CrusaderDivision"]/equippedStatOffsets</xpath>
					<value>
						<CarryWeight>250</CarryWeight>
						<CarryBulk>200</CarryBulk>
						<Suppressability>-100</Suppressability>
					</value>
				</li>
				<!-- ========== Crusader Division Warcasket - Shoulders ========== -->
				<li Class="PatchOperationAdd">
					<xpath>/Defs/VFEPirates.WarcasketDef[defName="SF_CrusaderDivisionShoulders"]/statBases</xpath>
