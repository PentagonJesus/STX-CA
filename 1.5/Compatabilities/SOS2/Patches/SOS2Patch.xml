<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Factions Expanded - Pirates</li>
		</mods>
			<match Class="PatchOperationSequence">
				<operations>
					<li Class="PatchOperationAdd">
					    <xpath>/Defs/VFEPirates.WarcasketDef[defName="SF_CrusaderDivision" or defName="SF_CrusaderDivisionShoulders" or defName="SF_CrusaderDivisionHelmet"]/apparel/tags</xpath>
						<value>
					                <li>EVA</li>
						</value>
					</li>
				</operations>
			</match>
	</Operation>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Expanded Framework</li>
		</mods>
			<match Class="PatchOperationSequence">
				<operations>
					<li Class="PatchOperationAdd">
						<xpath>Defs/ThingDef[defName="SF_UnerforschtCommandoArmor" or defName="SF_UnerforschtCommandoHelmet"]/apparel/tags</xpath>
						<value>
							<li>EVA</li>
						</value>
					</li>

				</operations>
			</match>
	</Operation>
	<Operation Class="PatchOperationSequence">
		<operations>
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="Apparel_ScoutArmor" or defName="Apparel_VanguardArmor" or defName="Apparel_RearguardArmor" or defName="Apparel_SeekerdArmor"]/apparel/tags</xpath>
				<value>
					<li>EVA</li>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="Apparel_ScoutHelmet" or defName="Apparel_VanguardHelmet" or defName="Apparel_RearguardHelmet" or defName="Apparel_SeekerHelmet"]/apparel/tags</xpath>
				<value>
					<li>EVA</li>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="Apparel_ScoutArmor" or defName="Apparel_VanguardArmor" or defName="Apparel_RearguardArmor" or defName="Apparel_SeekerdArmor"]/equippedStatOffsets</xpath>
				<value>
					<DecompressionResistance>.8</DecompressionResistance>
					<VacuumSpeedMultiplier>2</VacuumSpeedMultiplier>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="Apparel_ScoutHelmet" or defName="Apparel_VanguardHelmet" or defName="Apparel_RearguardHelmet" or defName="Apparel_SeekerHelmet"]/equippedStatOffsets</xpath>
				<value>
					<DecompressionResistance>.25</DecompressionResistance>
					<VacuumSpeedMultiplier>2</VacuumSpeedMultiplier>
					<HypoxiaResistance>1</HypoxiaResistance>
				</value>
			</li>	
		</operations>
	</Operation>
</Patch>
