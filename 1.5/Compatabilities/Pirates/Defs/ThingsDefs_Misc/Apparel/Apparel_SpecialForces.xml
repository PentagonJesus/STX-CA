<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- crusader division -->
	<VFEPirates.WarcasketDef ParentName="VFEP_WarcasketArmorBase">
		<defName>SF_CrusaderDivision</defName>
		<label>Netherion Shell</label>
		<shortDescription>A walking fortress only given to those that have dedicated their life to the Empire. There is no return.</shortDescription>
		<description>The Netherion Shell is a death sentence. Pilots selected for the Netherion Shell undergo a full armor implantation, an almost permanant fusion of body and suit. Deployment of the Netherion Shell is absolute, no mercy shown, no quarter given. It is the final signal of the end.</description>
		<graphicData>
			<texPath>Things/Pawn/Warcasketlike/HiggsCasket</texPath>
		</graphicData>
		<statBases>
			<Mass>75</Mass>
			<ArmorRating_Sharp>2.0</ArmorRating_Sharp>
			<ArmorRating_Blunt>1.6</ArmorRating_Blunt>
			<ArmorRating_Heat>2.0</ArmorRating_Heat>
			<Insulation_Cold>160</Insulation_Cold>
			<Insulation_Heat>126</Insulation_Heat>
			<EquipDelay>1</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<VEF_MassCarryCapacity>125</VEF_MassCarryCapacity>
			<MoveSpeed>0.60</MoveSpeed>
			<ToxicResistance>0.75</ToxicResistance>
			<WorkSpeedGlobal>0.02</WorkSpeedGlobal>
			<AimingDelayFactor>-0.5</AimingDelayFactor>
			<SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-1000.0</SlaveSuppressionOffset>
		</equippedStatOffsets>
		<costList>
			<ComponentSpacer>4</ComponentSpacer>
			<VoltheriumHexTubes>5</VoltheriumHexTubes>
			<Plasteel>200</Plasteel>
			<DevilstrandCloth>100</DevilstrandCloth>
			<Uranium>30</Uranium>
		</costList>
		<researchPrerequisites>
			<li>AdvancedStraeax</li>
		</researchPrerequisites>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Legs</li>
				<li>Feet</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Pawn/Warcasketlike/HiggsCasket</wornGraphicPath>
			<layers>
				<li>OnSkin</li>
				<li>Middle</li>
				<li>Shell</li>
			</layers>
			<tags>
				<li>WarcasketHeavy</li>
				<li>WarcasketCata</li>
				<li>WarcasketAll</li>
			</tags>
		</apparel>
		<modExtensions>
			<li Class="VFECore.ApparelExtension">
				<traitsOnEquip>
					<li>VFEP_WarcasketTrait</li>
				</traitsOnEquip>
				<traitsOnUnequip>
					<li>VFEP_Shellcasket</li>
				</traitsOnUnequip>
				<pawnCapacityMinLevels>
					<li>
						<capacity>Moving</capacity>
						<minLevel>0.7</minLevel>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<minLevel>0.7</minLevel>
					</li>
				</pawnCapacityMinLevels>
			</li>
		</modExtensions>
	</VFEPirates.WarcasketDef>
