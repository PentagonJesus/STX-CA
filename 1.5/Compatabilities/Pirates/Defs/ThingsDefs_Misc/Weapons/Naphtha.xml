<Defs>
<!-- Naphtha -->
	<ThingDef ParentName="VFEP_BaseWarcasketGun">
		<defName>WarcasketGun_Naphtha</defName>
		<label>Naphtha</label>
		<description>The Naphtha is a specialized weapon meant for soldiers who have dedicated their life to service of the emperor, its deadly fire power and ability to cover entire areas in fire and blood made it horifically effective.</description>
		<graphicData>
			<texPath>Things/Item/Equipment/WeaponRanged/Naphtha</texPath>
		</graphicData>
		<soundInteract>Interact_Rifle</soundInteract>
		<statBases>
			<MarketValue>4800</MarketValue>
			<WorkToMake>90000</WorkToMake>
			<Mass>55</Mass>
			<AccuracyTouch>1.0</AccuracyTouch>
			<AccuracyShort>0.60</AccuracyShort>
			<AccuracyMedium>0.40</AccuracyMedium>
			<AccuracyLong>0.16</AccuracyLong>
			<RangedWeapon_Cooldown>2.6</RangedWeapon_Cooldown>
		</statBases>
		<weaponTags>
			<li>WarcasketHeavy</li>
		</weaponTags>
		<costList>
			<Plasteel>240</Plasteel>
			<Uranium>80</Uranium>
			<ComponentSpacer>12</ComponentSpacer>
		</costList>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Bullet_WarcasketThermalMinigun</defaultProjectile>
				<warmupTime>2</warmupTime>
				<range>70</range>
				<ticksBetweenBurstShots>4</ticksBetweenBurstShots>
				<burstShotCount>36</burstShotCount>
				<soundCast>Shot_ChargeRifle</soundCast>
				<soundCastTail>GunTail_Medium</soundCastTail>
				<muzzleFlashScale>9</muzzleFlashScale>
			</li>
		</verbs>
		<tools> 
			<li>
				<label>stock</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>12</power>
				<cooldownTime>4</cooldownTime>
			</li>
			<li>
				<label>barrel</label>
				<capacities>
					<li>Blunt</li>
					<li>Poke</li>
				</capacities>
				<power>12</power>
				<cooldownTime>4</cooldownTime>
			</li>
		</tools>
		<modExtensions>
			<li Class="VFEcore.FloorGraphicExtension">
				<graphicData>
					<graphicClass>Graphic_Single</graphicClass>
					<texPath>Things/Item/WeaponsBoxed/WarcasketChargeBlaster_OnFloor</texPath>
					<onGroundRandomRotateAngle>0</onGroundRandomRotateAngle>
					<drawSize>1</drawSize>
				</graphicData>
			</li>
		</modExtensions>
	</ThingDef>
	<ThingDef ParentName="BaseBullet">
		<defName>Bullet_WarcasketThermalMinigun</defName>
		<label>warcasket minigun thermal bolt</label>
		<graphicData>
			<texPath>Things/Projectile/Projectile_HeavyThermalBolt</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile>
			<damageDef>Bomb</damageDef>
			<explosionRadius>1.9</explosionRadius>
			<armorPenetrationBase>0.25</armorPenetrationBase>
			<damageAmountBase>8</damageAmountBase>
			<stoppingPower>1.0</stoppingPower>
			<speed>46</speed>
		</projectile>
	</ThingDef>
	
	<!-- On-ground Item -->
	
	<ThingDef ParentName="VFEP_WarcasketWeaponBoxBase">
		<defName>Naphtha_Warcasket_Box</defName>
		<label>Naphtha</label>
		<description>The Naphtha is a specialized weapon meant for soldiers who have dedicated their life to service of the emperor, its deadly fire power and ability to cover entire areas in fire and blood made it horifically effective.</description>
		<graphicData>
			<texPath>Things/Item/WeaponsBoxed/WarcasketChargeBlaster_OnFloor</texPath>
		</graphicData>
		<costList>
			<Plasteel>240</Plasteel>
			<Uranium>80</Uranium>
			<ComponentSpacer>12</ComponentSpacer>
		</costList>
		<statBases>
			<Mass>60</Mass>
			<WorkToBuild>82000</WorkToBuild>
		</statBases>
		<researchPrerequisites>
			<li>VFEP_SpacerWarcasketWeaponry</li>
		</researchPrerequisites>
		<comps>
			<li Class="VFEPirates.CompProperties_WeaponBox">
				<weaponToEquip>WarcasketGun_Naphtha</weaponToEquip>
			</li>
		</comps>
	</ThingDef>
</Defs>