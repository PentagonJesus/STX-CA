<!-- Armor 1 -->
<Defs>
	<ThingDef ParentName="ArmorMachineableBase">
		<defName>Apparel_ScoutArmor</defName>
		<label>2nd Divison Scout Armor</label>
		<description>Well known for its read visor that stares down its enemies. The scout armor is worn by Imperial scouts usually sent on recon missions.  Contrary to their name they can come heavily armed and can take front-line roles in many scenarios.</description>
		<techLevel>Spacer</techLevel>
		<generateCommonality>0</generateCommonality>
		<recipeMaker>
			<unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
			<researchPrerequisite>ReconArmor</researchPrerequisite>
			<skillRequirements>
				<Crafting>7</Crafting>
			</skillRequirements>
			<recipeUsers Inherit="False">
				<li>FabricationBench</li>
			</recipeUsers>
		</recipeMaker>
		<thingCategories Inherit='False'>
			<li>ApparelArmor</li>
		</thingCategories>
		<graphicData>
			<texPath>Things/Apparel/FirstArmor_UI</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<apparel>
			<wornGraphicPath>Things/Apparel/FirstArmor</wornGraphicPath>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Neck</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
				<li>Hands</li>
				<li>Feet</li>
			</bodyPartGroups>
			<layers>
				<li>Middle</li>
				<li>Shell</li>
			</layers>
			<tags>
				<li>SpacerMilitary</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
			<useDeflectMetalEffect>true</useDeflectMetalEffect>
		</apparel>
		<statBases>
			<WorkToMake>45000</WorkToMake>
			<MaxHitPoints>350</MaxHitPoints>
			<Mass>9</Mass>
			<Flammability>0</Flammability>
			<ArmorRating_Sharp>0.96</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.5</ArmorRating_Blunt>
			<ArmorRating_Heat>0.47</ArmorRating_Heat>
			<Insulation_Cold>35</Insulation_Cold>
			<Insulation_Heat>10</Insulation_Heat>
			<EquipDelay>10</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<MoveSpeed>0.3</MoveSpeed>
			<AimingDelayFactor>-0.20</AimingDelayFactor>
		</equippedStatOffsets>
		<costList>
			<Plasteel>95</Plasteel>
			<ComponentSpacer>3</ComponentSpacer>
			<DevilstrandCloth>20</DevilstrandCloth>
			<Uranium>10</Uranium>
		</costList>
	</ThingDef>
