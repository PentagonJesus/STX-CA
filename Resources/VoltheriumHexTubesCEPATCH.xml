<?xml version="1.0" encoding="utf-8"?>
<Patch>
		<Operation Class="PatchOperationSequence">
			<operations>
	<!-- VoltheriumHexTubes -->

	<li Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="VoltheriumHexTubes"]/statBases</xpath>
		<value>
			<Bulk>0.1</Bulk>
		</value>
	</li>

	<li Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="VoltheriumHexTubes"]/stuffProps/categories</xpath>
		<value>
			<li>Metallic_Weapon</li>
			<li>Steeled</li>
		</value>
	</li>

	<li Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="VoltheriumHexTubes"]/statBases/StuffPower_Armor_Sharp</xpath>
		<value>
			<StuffPower_Armor_Sharp>6</StuffPower_Armor_Sharp>
		</value>
	</li>

	<li Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="VoltheriumHexTubes"]/statBases/StuffPower_Armor_Blunt</xpath>
		<value>
			<StuffPower_Armor_Blunt>5</StuffPower_Armor_Blunt>
		</value>
	</li>

	<li Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="VoltheriumHexTubes"]/statBases/StuffPower_Armor_Heat</xpath>
		<value>
			<StuffPower_Armor_Heat>0.40</StuffPower_Armor_Heat>
		</value>
	</li>

	<li Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="VoltheriumHexTubes"]/stuffProps/statFactors</xpath>
		<value>
			<MeleePenetrationFactor>2.4</MeleePenetrationFactor>
		</value>
	</li>

	<li Class="PatchOperationRemove">
		<xpath>Defs/ThingDef[defName="VoltheriumHexTubes"]/statBases/SharpDamageMultiplier</xpath>
	</li>

	</operations>
	</Operation>
</Patch>